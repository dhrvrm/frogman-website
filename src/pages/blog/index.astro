---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class='blog-index-main'>
			<section class='blog-index-section'>
				<ul class='blog-index-list'>
					{
						posts.map((post) => (
							<li class='blog-index-item'>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image
											width={720}
											height={360}
											src={post.data.heroImage}
											alt=''
										/>
									)}
									<h4 class='blog-index-title'>{post.data.title}</h4>
									<p class='blog-index-date'>
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />

		<style>
			.blog-index-main {
				width: 100%;
				max-width: 1280px;
				margin: 0 auto;
				padding: 4rem 1.5rem;
			}
			.blog-index-list {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			.blog-index-item {
				width: calc(50% - 1rem);
			}
			.blog-index-item * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			.blog-index-item:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			.blog-index-item:first-child img {
				width: 100%;
			}
			.blog-index-item:first-child .blog-index-title {
				font-family: var(--font-heading);
				font-size: clamp(2rem, 4vw, 2.5rem);
				font-weight: 700;
			}
			.blog-index-item img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				width: 100%;
				height: auto;
			}
			.blog-index-item a {
				display: block;
			}
			.blog-index-title {
				margin: 0;
				color: var(--dark);
				line-height: 1.3;
				font-family: var(--font-heading);
				font-size: clamp(1.25rem, 2.5vw, 1.5rem);
				font-weight: 600;
			}
			.blog-index-date {
				margin: 0.5rem 0 0 0;
				color: var(--gray-600);
				font-family: var(--font-body);
				font-size: 1rem;
			}
			.blog-index-item a:hover .blog-index-title,
			.blog-index-item a:hover .blog-index-date {
				color: var(--primary);
			}
			.blog-index-item a:hover img {
				box-shadow: var(--shadow-xl);
			}
			@media (max-width: 720px) {
				.blog-index-list {
					gap: 1.5rem;
				}
				.blog-index-item {
					width: 100%;
					text-align: center;
				}
				.blog-index-item:first-child {
					margin-bottom: 0;
				}
				.blog-index-item:first-child .blog-index-title {
					font-size: clamp(1.75rem, 5vw, 2rem);
				}
			}
		</style>
	</body>
</html>
