<style>
	.hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		padding-top: 64px;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
	}

	.hero-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			180deg,
			rgba(10, 24, 40, 0.4) 0%,
			rgba(0, 61, 91, 0.6) 50%,
			rgba(10, 24, 40, 0.8) 100%
		);
	}

	.bubbles {
		position: absolute;
		width: 100%;
		height: 100%;
		overflow: hidden;
	}

	.bubble {
		position: absolute;
		bottom: -100px;
		width: 40px;
		height: 40px;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 50%;
		animation: bubble 15s infinite ease-in;
	}

	.bubble:nth-child(1) {
		left: 10%;
		width: 60px;
		height: 60px;
		animation-delay: 0s;
		animation-duration: 12s;
	}

	.bubble:nth-child(2) {
		left: 25%;
		width: 30px;
		height: 30px;
		animation-delay: 2s;
		animation-duration: 14s;
	}

	.bubble:nth-child(3) {
		left: 45%;
		width: 50px;
		height: 50px;
		animation-delay: 4s;
		animation-duration: 16s;
	}

	.bubble:nth-child(4) {
		left: 65%;
		width: 35px;
		height: 35px;
		animation-delay: 1s;
		animation-duration: 13s;
	}

	.bubble:nth-child(5) {
		left: 80%;
		width: 45px;
		height: 45px;
		animation-delay: 3s;
		animation-duration: 15s;
	}

	.bubble:nth-child(6) {
		left: 90%;
		width: 25px;
		height: 25px;
		animation-delay: 5s;
		animation-duration: 11s;
	}

	.hero-content {
		position: relative;
		z-index: 1;
		text-align: center;
		max-width: 900px;
		padding: 2rem;
	}

	.heading-hero {
		color: #ffffff;
		text-shadow:
			0 0 30px rgba(0, 217, 255, 0.5),
			0 4px 20px rgba(0, 0, 0, 0.5);
		filter: drop-shadow(0 2px 10px rgba(0, 0, 0, 0.3));
		line-height: 1.1;
		margin-bottom: 2rem;
	}

	.gradient-text {
		background: linear-gradient(135deg, #00d9ff 0%, #00a8cc 50%, #0d4f8b 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: none;
		filter: drop-shadow(0 0 20px rgba(0, 217, 255, 0.6));
	}

	.hero-subtitle {
		color: #ffffff;
		text-shadow:
			0 2px 15px rgba(0, 0, 0, 0.6),
			0 0 20px rgba(255, 255, 255, 0.2);
		margin: 0 auto 1.5rem;
		max-width: 700px;
		font-weight: 500;
		font-size: clamp(1.125rem, 2.5vw, 1.375rem);
		line-height: 1.6;
	}

	.hero-cta {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-top: 0;
	}

	.hero-cta .btn-primary,
	.hero-cta .btn-secondary {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}

	.hero-cta .btn-secondary {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border: 2px solid rgba(255, 255, 255, 0.3);
		color: var(--white);
	}

	.hero-cta .btn-secondary:hover {
		background: rgba(255, 255, 255, 0.2);
		border-color: var(--accent);
	}

	/* Submarine Stats Panel */
	.submarine-panel {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		display: flex;
		gap: 0;
		padding: 0;
		background: rgba(10, 24, 40, 0.6);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		border-top: 1px solid rgba(0, 217, 255, 0.3);
		box-shadow:
			0 -8px 32px rgba(0, 0, 0, 0.4),
			inset 0 1px 0 rgba(255, 255, 255, 0.1),
			0 0 20px rgba(0, 217, 255, 0.15);
		z-index: 2;
		justify-content: center;
	}

	.panel-item {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		padding: 1.25rem 2rem;
		position: relative;
		flex: 1;
		max-width: 220px;
		transition: all 0.3s ease;
		border-left: 1px solid rgba(0, 217, 255, 0.1);
	}

	.panel-item:first-child {
		border-left: none;
	}

	.panel-item::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 3px;
		background: var(--accent);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.panel-item::after {
		content: '';
		position: absolute;
		right: 0;
		top: 0;
		bottom: 0;
		width: 3px;
		background: var(--accent);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.panel-item:hover::before,
	.panel-item:hover::after {
		opacity: 1;
	}

	.panel-item:hover {
		background: rgba(0, 217, 255, 0.15);
	}

	.panel-icon {
		flex-shrink: 0;
		width: 36px;
		height: 36px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(0, 217, 255, 0.15);
		border: 1px solid rgba(0, 217, 255, 0.3);
		border-radius: 8px;
		color: var(--accent);
	}

	.panel-content {
		flex: 1;
		min-width: 0;
		text-align: center;
	}

	.panel-value {
		font-family: var(--font-heading);
		font-size: 1.125rem;
		font-weight: 700;
		color: #ffffff;
		line-height: 1.2;
		margin-bottom: 0.25rem;
		text-shadow: 0 0 10px rgba(0, 217, 255, 0.5);
	}

	.panel-label {
		font-size: 0.75rem;
		color: rgba(255, 255, 255, 0.7);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-weight: 500;
	}

	.panel-indicator {
		position: absolute;
		top: 0.75rem;
		right: 0.75rem;
		width: 8px;
		height: 8px;
		border-radius: 50%;
		background: var(--accent);
		box-shadow:
			0 0 8px var(--accent),
			0 0 16px var(--accent);
		animation: pulse-active 1.5s ease-in-out infinite;
		flex-shrink: 0;
	}

	@keyframes pulse {
		0%,
		100% {
			opacity: 0.5;
		}
		50% {
			opacity: 1;
		}
	}

	@keyframes pulse-active {
		0%,
		100% {
			opacity: 1;
			transform: scale(1);
		}
		50% {
			opacity: 0.8;
			transform: scale(1.2);
		}
	}

	@media (max-width: 1024px) {
		.submarine-panel {
			flex-wrap: wrap;
		}

		.panel-item {
			flex: 1 1 calc(50% - 1px);
			padding: 1rem 1.5rem;
			border-top: 1px solid rgba(0, 217, 255, 0.1);
		}

		.panel-item:nth-child(odd) {
			border-left: none;
		}

		.panel-item:nth-child(1),
		.panel-item:nth-child(2) {
			border-top: none;
		}

		.panel-value {
			font-size: 1rem;
		}

		.panel-icon {
			width: 32px;
			height: 32px;
		}
	}

	@media (max-width: 768px) {
		.hero {
			min-height: 90vh;
		}

		.hero-cta {
			flex-direction: column;
			align-items: center;
		}

		.hero-cta .btn-primary,
		.hero-cta .btn-secondary {
			width: 100%;
			max-width: 300px;
		}

		.submarine-panel {
			flex-direction: column;
		}

		.panel-item {
			width: 100%;
			flex: 1;
			max-width: none;
			padding: 1rem;
			border-left: none;
			border-top: 1px solid rgba(0, 217, 255, 0.1);
		}

		.panel-item:first-child {
			border-top: none;
		}

		.panel-indicator {
			top: 0.5rem;
			right: 0.5rem;
		}
	}
</style>
