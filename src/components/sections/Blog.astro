---
// Blog Section
const blogPosts = [
	{
		title: 'Radhanagar Beach: The Crown Jewel of Andaman',
		excerpt:
			"Discover why Radhanagar Beach was voted Asia's Best Beach and what makes it a must-visit destination.",
		image:
			'https://images.unsplash.com/photo-1578216527468-725c0e5e8281?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NTAwNDR8MHwxfHNlYXJjaHw1fHxib2F0JTIwdHJvcGljYWwlMjBpc2xhbmQlMjB0dXJxdW9pc2UlMjB3YXRlcnxlbnwwfDB8fGJsdWV8MTc2MTcyNjUyMHww&ixlib=rb-4.1.0&q=85',
		alt: 'Tropical beach paradise - Sergey Mind on Unsplash',
		category: 'Destinations',
		date: 'Oct 28, 2025',
	},
	{
		title: 'Govind Nagar Beach: Snorkeling Paradise',
		excerpt:
			'Explore the vibrant marine life and crystal-clear waters of Govind Nagar Beach with Frogman.',
		image:
			'https://images.unsplash.com/photo-1607073521066-99ea925762c6?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NTAwNDR8MHwxfHNlYXJjaHw3fHxzY3ViYSUyMGRpdmVycyUyMGdyb3VwJTIwdW5kZXJ3YXRlcnxlbnwwfDB8fGJsdWV8MTc2MTcyNjUxOXww&ixlib=rb-4.1.0&q=85',
		alt: 'Snorkeling adventure - Gerald Sch√∂mbs on Unsplash',
		category: 'Activities',
		date: 'Oct 27, 2025',
	},
	{
		title: 'Elephant Beach: Complete Guide 2025',
		excerpt:
			'Everything you need to know about visiting Elephant Beach, from activities to best times to visit.',
		image:
			'https://images.unsplash.com/photo-1568701783073-f11da4938cf9?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NTAwNDR8MHwxfHNlYXJjaHw5fHxib2F0JTIwdHJvcGljYWwlMjBpc2xhbmQlMjB0dXJxdW9pc2UlMjB3YXRlcnxlbnwwfDB8fGJsdWV8MTc2MTcyNjUyMHww&ixlib=rb-4.1.0&q=85',
		alt: 'Beach kayaking - Khan Avi on Unsplash',
		category: 'Guides',
		date: 'Oct 25, 2025',
	},
];
---

<section id='blog' class='blog section-padding'>
	<div class='container'>
		<div class='section-header'>
			<h2 class='heading-xl'>Stories from the Deep</h2>
			<p class='body-lg'>
				Dive into our latest articles and underwater adventures
			</p>
		</div>

		<div class='blog-grid'>
			<article class='blog-card featured glass'>
				<div class='blog-image'>
					<img src={blogPosts[0].image} alt={blogPosts[0].alt} />
					<span class='category-badge'>{blogPosts[0].category}</span>
				</div>
				<div class='blog-content'>
					<div class='blog-meta'>
						<span class='date'>
							<svg
								width='16'
								height='16'
								viewBox='0 0 24 24'
								fill='none'
								stroke='currentColor'
								stroke-width='2'
							>
								<rect x='3' y='4' width='18' height='18' rx='2' ry='2'></rect>
								<line x1='16' y1='2' x2='16' y2='6'></line>
								<line x1='8' y1='2' x2='8' y2='6'></line>
								<line x1='3' y1='10' x2='21' y2='10'></line>
							</svg>
							{blogPosts[0].date}
						</span>
					</div>
					<h3 class='heading-md'>{blogPosts[0].title}</h3>
					<p class='body-base'>{blogPosts[0].excerpt}</p>
					<a href='#' class='read-more'>
						Read More
						<svg
							width='16'
							height='16'
							viewBox='0 0 24 24'
							fill='none'
							stroke='currentColor'
							stroke-width='2'
						>
							<line x1='5' y1='12' x2='19' y2='12'></line>
							<polyline points='12 5 19 12 12 19'></polyline>
						</svg>
					</a>
				</div>
			</article>

			{
				blogPosts.slice(1).map((post) => (
					<article class='blog-card glass'>
						<div class='blog-image'>
							<img src={post.image} alt={post.alt} />
							<span class='category-badge'>{post.category}</span>
						</div>
						<div class='blog-content'>
							<div class='blog-meta'>
								<span class='date'>
									<svg
										width='16'
										height='16'
										viewBox='0 0 24 24'
										fill='none'
										stroke='currentColor'
										stroke-width='2'
									>
										<rect x='3' y='4' width='18' height='18' rx='2' ry='2' />
										<line x1='16' y1='2' x2='16' y2='6' />
										<line x1='8' y1='2' x2='8' y2='6' />
										<line x1='3' y1='10' x2='21' y2='10' />
									</svg>
									{post.date}
								</span>
							</div>
							<h3 class='heading-sm'>{post.title}</h3>
							<p class='body-sm'>{post.excerpt}</p>
							<a href='#' class='read-more'>
								Read More
								<svg
									width='16'
									height='16'
									viewBox='0 0 24 24'
									fill='none'
									stroke='currentColor'
									stroke-width='2'
								>
									<line x1='5' y1='12' x2='19' y2='12' />
									<polyline points='12 5 19 12 12 19' />
								</svg>
							</a>
						</div>
					</article>
				))
			}
		</div>

		<div class='blog-cta'>
			<a href='/blog' class='btn-secondary'>
				View All Articles
				<svg
					width='20'
					height='20'
					viewBox='0 0 24 24'
					fill='none'
					stroke='currentColor'
					stroke-width='2'
				>
					<line x1='5' y1='12' x2='19' y2='12'></line>
					<polyline points='12 5 19 12 12 19'></polyline>
				</svg>
			</a>
		</div>
	</div>
</section>

<style>
	.blog {
		background: var(--white);
		padding-inline: var(--section-padding-inline);
		padding-block: var(--section-padding-block);
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-header p {
		margin-top: 1rem;
	}

	.blog-grid {
		display: grid;
		grid-template-columns: repeat(12, 1fr);
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.blog-card {
		border-radius: var(--radius-xl);
		overflow: hidden;
		background: var(--white);
		border: 1px solid var(--gray-200);
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
	}

	.blog-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-xl);
	}

	.blog-card.featured {
		grid-column: span 12;
		flex-direction: row;
	}

	.blog-card.featured .blog-image {
		width: 50%;
		height: auto;
	}

	.blog-card.featured .blog-content {
		width: 50%;
		padding: 3rem;
	}

	.blog-card:not(.featured) {
		grid-column: span 6;
	}

	.blog-image {
		position: relative;
		height: 250px;
		overflow: hidden;
	}

	.blog-card.featured .blog-image {
		height: 100%;
	}

	.blog-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.blog-card:hover .blog-image img {
		transform: scale(1.1);
	}

	.category-badge {
		position: absolute;
		top: 1rem;
		left: 1rem;
		padding: 0.5rem 1rem;
		background: var(--primary);
		color: var(--white);
		border-radius: 24px;
		font-size: 0.875rem;
		font-weight: 600;
		z-index: 1;
	}

	.blog-content {
		padding: 2rem;
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.blog-meta {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.date {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--gray-500);
		font-size: 0.875rem;
	}

	.blog-content h3 {
		margin-bottom: 1rem;
	}

	.blog-content p {
		color: var(--gray-600);
		margin-bottom: 1.5rem;
		flex: 1;
	}

	.read-more {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--primary);
		font-weight: 600;
		font-size: 0.95rem;
		transition: gap 0.3s ease;
	}

	.read-more:hover {
		gap: 0.75rem;
		color: var(--secondary);
	}

	.blog-cta {
		text-align: center;
	}

	@media (max-width: 1024px) {
		.blog-card.featured {
			flex-direction: column;
		}

		.blog-card.featured .blog-image,
		.blog-card.featured .blog-content {
			width: 100%;
		}

		.blog-card.featured .blog-image {
			height: 300px;
		}

		.blog-card.featured .blog-content {
			padding: 2rem;
		}
	}

	@media (max-width: 768px) {
		.blog-grid {
			grid-template-columns: 1fr;
		}

		.blog-card.featured,
		.blog-card:not(.featured) {
			grid-column: span 1;
		}

		.blog-image {
			height: 200px;
		}
	}
</style>
