<style>
	.location {
		background: linear-gradient(180deg, var(--gray-50) 0%, var(--white) 100%);
		padding-inline: var(--section-padding-inline);
		padding-block: var(--section-padding-block);
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-header p {
		margin-top: 1rem;
	}

	.location-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		margin-bottom: 4rem;
		align-items: stretch;
	}

	.map-container {
		position: relative;
		border-radius: var(--radius-xl);
		overflow: hidden;
		box-shadow: var(--shadow-xl);
		height: 100%;
		display: flex;
		flex-direction: column;
		min-height: 500px;
	}

	.map-container iframe {
		display: block;
		border: none;
		width: 100%;
		height: 100%;
		flex: 1;
	}

	/* Location Features - Stacked Text Items with Hover Image */
	.location-features {
		display: flex;
		flex-direction: column;
		gap: 0;
		justify-content: flex-start;
	}

	.location-feature {
		padding: 1.5rem 0;
		border-bottom: 1px solid var(--gray-200);
		position: relative;
		cursor: pointer;
		transition: border-color 0.3s ease;
	}

	.location-feature:last-child {
		border-bottom: none;
	}

	.location-feature:hover {
		border-color: var(--primary);
	}

	.feature-text h3 {
		margin: 0 0 0.5rem 0;
	}

	.feature-text p {
		margin: 0;
		color: var(--gray-600);
	}

	/* Hover Image - Follows Mouse */
	.hover-image {
		position: fixed !important;
		width: 300px !important;
		height: 300px !important;
		min-width: 300px !important;
		min-height: 300px !important;
		border-radius: var(--radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow-2xl);
		opacity: 0;
		visibility: hidden;
		pointer-events: none !important;
		z-index: 10000 !important;
		left: 0;
		top: 0;
		display: block;
		will-change: transform, opacity;
		transform: translate(-50%, -50%) translateZ(0);
		transition: opacity 0.15s ease-out;
		background-size: contain;
		background-position: center;
		background-repeat: no-repeat;
		background-color: var(--gray-100);
	}

	.dive-sites {
		margin-top: 3rem;
	}

	.dive-sites h3 {
		text-align: center;
		margin-bottom: 2.5rem;
	}

	.sites-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.site-card {
		padding: 2rem;
		border-radius: var(--radius-xl);
		background: var(--white);
		border: 1px solid var(--gray-200);
		transition: all 0.3s ease;
	}

	.site-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-xl);
	}

	.site-icon {
		width: 64px;
		height: 64px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--gradient-ocean);
		border-radius: var(--radius-md);
		color: var(--white);
		margin-bottom: 1.5rem;
	}

	.site-card h4 {
		margin-bottom: 0.75rem;
	}

	.site-card p {
		color: var(--gray-600);
		margin-bottom: 1rem;
	}

	.depth-tag {
		display: inline-block;
		padding: 0.5rem 1rem;
		background: var(--seafoam);
		color: var(--ocean-deep);
		border-radius: 24px;
		font-size: 0.875rem;
		font-weight: 600;
	}

	@media (max-width: 1024px) {
		.location-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.map-container {
			min-height: 450px;
		}
	}

	@media (max-width: 768px) {
		.location-feature {
			padding: 1rem 0;
		}

		.sites-grid {
			grid-template-columns: 1fr;
		}

		.map-container {
			min-height: 400px;
		}
	}
</style>

<script>
	// Mouse follow effect for feature images - Optimized
	function initHoverImages() {
		const featureItems = document.querySelectorAll('.location-feature');
		if (featureItems.length === 0) return;

		const hoverImage = document.createElement('div');
		hoverImage.className = 'hover-image';
		hoverImage.style.position = 'fixed';
		hoverImage.style.zIndex = '10000';
		hoverImage.style.pointerEvents = 'none';
		document.body.appendChild(hoverImage);

		// Preload all images for instant display
		featureItems.forEach((item) => {
			const url = item.getAttribute('data-image');
			if (url) {
				const img = new Image();
				img.src = url;
			}
		});

		// Optimized mouse tracking with requestAnimationFrame
		let rafId: number | null = null;
		let mouseX = 0;
		let mouseY = 0;
		let isVisible = false;

		function updatePosition() {
			if (isVisible) {
				hoverImage.style.left = mouseX + 'px';
				hoverImage.style.top = mouseY + 'px';
				rafId = requestAnimationFrame(updatePosition);
			}
		}

		featureItems.forEach((item) => {
			const imageUrl = item.getAttribute('data-image');
			if (!imageUrl) return;

			item.addEventListener('mouseenter', () => {
				hoverImage.style.backgroundImage = `url('${imageUrl}')`;
				hoverImage.style.visibility = 'visible';
				hoverImage.style.opacity = '1';
				isVisible = true;

				// Start animation loop
				if (!rafId) {
					rafId = requestAnimationFrame(updatePosition);
				}
			});

			item.addEventListener('mousemove', (e) => {
				const event = e as MouseEvent;
				if (
					event &&
					typeof event.clientX === 'number' &&
					typeof event.clientY === 'number'
				) {
					mouseX = event.clientX;
					mouseY = event.clientY;
					// Start animation if not already running
					if (isVisible && !rafId) {
						rafId = requestAnimationFrame(updatePosition);
					}
				}
			});

			item.addEventListener('mouseleave', () => {
				isVisible = false;
				hoverImage.style.opacity = '0';
				if (rafId) {
					cancelAnimationFrame(rafId);
					rafId = null;
				}
				setTimeout(() => {
					hoverImage.style.visibility = 'hidden';
				}, 150);
			});
		});
	}

	// Run when DOM is ready
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initHoverImages);
	} else {
		initHoverImages();
	}
</script>
