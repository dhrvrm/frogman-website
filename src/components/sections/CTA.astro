</section>

<style>
	.cta {
		position: relative;
		min-height: 80vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding-inline: var(--section-padding-inline);
		padding-block: var(--section-padding-block);
		overflow: hidden;
	}

	.cta-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
	}

	.cta-background img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.cta-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			135deg,
			rgba(0, 61, 91, 0.9) 0%,
			rgba(13, 79, 139, 0.85) 50%,
			rgba(0, 168, 204, 0.8) 100%
		);
	}

	.cta-content {
		position: relative;
		z-index: 1;
		text-align: center;
		color: var(--white);
	}

	.cta-content h2 {
		margin-bottom: 1.5rem;
	}

	.cta-subtitle {
		color: rgba(255, 255, 255, 0.95);
		margin: 2rem auto 3.5rem;
		max-width: 700px;
	}

	.cta-buttons {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-bottom: 3rem;
	}

	.btn-large {
		padding: 1.25rem 2.5rem;
		font-size: 1.125rem;
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
	}

	.cta-buttons .btn-secondary {
		background: rgba(255, 255, 255, 0.15);
		backdrop-filter: blur(10px);
		border: 2px solid rgba(255, 255, 255, 0.3);
		color: var(--white);
	}

	.cta-buttons .btn-secondary:hover {
		background: rgba(255, 255, 255, 0.25);
		border-color: var(--white);
	}

	.contact-info {
		display: flex;
		gap: 2rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-bottom: 3rem;
		padding: 2rem;
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border-radius: var(--radius-xl);
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.contact-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: rgba(255, 255, 255, 0.95);
	}

	.contact-item svg {
		color: var(--accent);
		flex-shrink: 0;
	}

	.contact-item a {
		color: var(--white);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.contact-item a:hover {
		color: var(--accent);
	}

	.social-proof {
		display: flex;
		gap: 3rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.proof-item {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.proof-icon {
		width: 64px;
		height: 64px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(255, 255, 255, 0.15);
		backdrop-filter: blur(10px);
		border-radius: 50%;
		color: var(--accent);
	}

	.proof-item strong {
		display: block;
		font-family: var(--font-heading);
		font-size: 1.5rem;
		font-weight: 800;
		color: var(--white);
	}

	.proof-item span {
		display: block;
		font-size: 0.875rem;
		color: rgba(255, 255, 255, 0.8);
	}

	@media (max-width: 768px) {
		.cta {
			min-height: 70vh;
		}

		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}

		.btn-large {
			width: 100%;
			max-width: 300px;
			justify-content: center;
		}

		.contact-info {
			flex-direction: column;
			gap: 1rem;
			padding: 1.5rem;
		}

		.social-proof {
			flex-direction: column;
			gap: 1.5rem;
		}

		.proof-item {
			justify-content: center;
		}
	}
</style>
